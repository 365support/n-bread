{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@public/*": ["public/*"],
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/domains/shared/components/*"],
      "@domains/*": ["src/domains/*"],
      "@utils/*": ["src/domains/shared/utils/*"],
      "@hooks/*": ["src/domains/shared/hooks/*"],
      "@constants/*": ["src/domains/shared/constants/*"]
    },
    "types": ["@emotion/react/types/css-prop"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
